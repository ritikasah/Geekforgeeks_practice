int nthFibonacci(int n){
        if (n == 0)
            return 0;
        if (n == 1 || n == 2)
            return 1;
        int baseF = 1;
        int baseS = 1;
        const int mod = 1e9 + 7;
        for (int i = 3; i <= n; ++i) {
            int tmp = baseF + baseS;
            baseF = baseS;
            baseS = tmp % mod;
        }
        return baseS;
    }
